@page "/"

<PageTitle>Home</PageTitle>

<h1>KSIĄŻKI</h1>


<table class="table table-striped">
    <thead>
        <tr>
            <th>Autor</th>
            <th>Tytuł</th>
            <th>Liczba stron</th>
            <th>Czy wypożyczona</th>
            <th>Imię wyp.</th>
            <th>Nazwisko wyp.</th>
        </tr>
    </thead>

    <tbody>
        @foreach (var item in Books)
        {
            <tr>
                <td>@item.Author</td>
                <td>@item.Title</td>
                <td>@item.PageCount</td>
                <td>@(item.IsBorrowed ? "Tak" : "Nie")</td>
                <td>@item.BorrowerFirstName</td>
                <td>@item.BorrowerLastName</td>
            </tr>
        }

    </tbody>
</table>